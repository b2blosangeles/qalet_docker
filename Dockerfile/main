FROM ubuntu:19.10

RUN apt update && apt autoremove
RUN apt-get install -y cron

# Setup cron job
# RUN (crontab -l ; echo "* * * * * echo "Hello world" >> /var/log/cron.log") | crontab

RUN rm -fr /var/qalet/ && mkdir /var/qalet/
# COPY buildScript/ /var/qalet/
# COPY Dockerindocker /var/qalet/


RUN (crontab -l ; dt =  date +"%m-%d-%y"; echo "* * * * * echo "Cron running $dt" >> /var/qalet/cron.log") | crontab
ENTRYPOINT /etc/init.d/cron stop && touch /var/log/cron.log && cron && tail -f /var/log/cron.log && echo "Load ubuntu ..."
